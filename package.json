        "@ethersproject/abstract-signer": "^5.5.0",
        "@ethersproject/contracts": "^5.5.0",
        "@ethersproject/providers": "^5.5.1",
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.5.0",
        "@testing-library/user-event": "^7.2.1",
        "@types/jest": "^25.1.4",
        "@types/node": "^17.0.14",
        "@types/react": "^17.0.39",
        "@types/react-dom": "^17.0.11",
        "@typescript-eslint/eslint-plugin": "^5.12.0",
        "auto-changelog": "^2.3.0",
        "axios": "^0.24.0",
        "axios-mock-adapter": "^1.20.0",
        "babel-eslint": "^10.0.3",
        "bignumber.js": "^9.0.1",
        "eslint": "^8.9.0",
        "eslint-config-impact-market": "impactMarket/eslint-config-impact-market",
        "graphql": "^16.2.0",
        "prettier": "^2.0.4",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-scripts": "^3.4.1",
        "typedoc": "^0.22.12",
        "typescript": "4.4.2"
    },
    "peerDependencies": {
        "@apollo/client": "^3.5.6",
        "@celo-tools/use-contractkit": "npm:@poofcash/use-contractkit@1.0.10",
        "@ethersproject/abi": "^5.5.0",
        "@ethersproject/abstract-signer": "^5.5.0",
        "@ethersproject/contracts": "^5.5.0",
        "@ethersproject/providers": "^5.5.1",
        "axios": "^0.24.0",
        "bignumber.js": "^9.0.1",
        "graphql": "^16.2.0",
        "react": "^17.0.2"

    },
    "resolutions": {
        "@walletconnect/client": "1.6.0",
        "@walletconnect/types": "1.7.0",
        "@celo-tools/use-contractkit": "npm:@poofcash/use-contractkit@1.0.10"
    }
}
