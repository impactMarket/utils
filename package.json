{
    "name": "@impact-market/utils",
    "version": "2.0.0-alpha.13",
    "description": "impactMarket utils",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/impactMarket/utils.git"
    },
    "author": "impact-market",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/impactMarket/utils/issues"
    },
    "homepage": "https://github.com/impactMarket/utils#readme",
    "source": "src/index.ts",
    "main": "dist/index.umd.js",
    "module": "dist/index.modern.module.js",
    "unpkg": "dist/index.umd.js",
    "types": "dist/index.d.ts",
    "engines": {
        "node": ">=16"
    },
    "files": [
        "**.js*",
        "**.js*",
        "*.d.ts",
        "abi"
    ],
    "scripts": {
        "build": "rm *.js *.js.map *.d.ts.map *.d.ts && tsc",
        "build:clean": "rm *.js *.js.map *.d.ts.map *.d.ts",
        "start": "tsc -w",
        "test:unit": "CI=1 react-scripts test --env=node",
        "test:watch": "react-scripts test --env=node",
        "docs": "typedoc src",
        "version": "auto-changelog -p && git add CHANGELOG.md",
        "prettier": "prettier --write \"./src/**/*.{ts,tsx}\"",
        "prettier:dryrun": "prettier \"./src/**/*.{ts,tsx}\"",
        "eslint": "eslint --fix \"./src/**/*.{ts,tsx}\"",
        "eslint:dryrun": "eslint \"./src/**/*.{ts,tsx}\" --max-warnings=0"
    },
    "devDependencies": {
        "@babel/core": "^7.16.10",
        "@apollo/client": "^3.5.6",
        "@celo-tools/use-contractkit": "npm:@poofcash/use-contractkit@1.0.10",
