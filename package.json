{
    "name": "@impact-market/utils",
    "version": "3.0.0",
    "description": "impactMarket utils",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/impactMarket/utils.git"
    },
    "author": "impact-market",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/impactMarket/utils/issues"
    },
    "homepage": "https://github.com/impactMarket/utils#readme",
    "source": "src/index.ts",
    "main": "dist/index.umd.js",
    "module": "dist/index.modern.module.js",
    "unpkg": "dist/index.umd.js",
    "types": "dist/index.d.ts",
    "engines": {
        "node": ">=14"
    },
    "files": [
        "**.js*",
        "**.js*",
        "*.d.ts",
        "abi",
        "ethers-wrapper"
    ],
    "scripts": {
        "build": "rm *.js *.js.map *.d.ts.map *.d.ts && tsc",
        "build:clean": "rm *.js *.js.map *.d.ts.map *.d.ts",
        "start": "tsc -w",
        "test:unit": "mocha",
        "test:watch": "mocha --watch",
        "docs": "typedoc src",
        "version": "auto-changelog -p && git add CHANGELOG.md",
        "prettier": "prettier --write \"./{src,tests}/**/*.{ts,tsx}\"",
        "prettier:dryrun": "prettier -l \"./{src,tests}/**/*.{ts,tsx}\"",
        "eslint": "eslint --fix \"./{src,tests}/**/*.{ts,tsx}\" --max-warnings=0",
        "eslint:dryrun": "eslint \"./{src,tests}/**/*.{ts,tsx}\" --max-warnings=0"
    },
    "devDependencies": {
        "@apollo/client": "^3.5.10",
        "@babel/core": "^7.16.10",
        "@celo/contractkit": "2.0.0",
        "@celo/react-celo": "4.0.1",
        "@ethersproject/abi": "5.6.4",
        "@ethersproject/abstract-signer": "5.6.2",
        "@ethersproject/contracts": "5.6.2",
        "@ethersproject/providers": "5.6.8",
        "@types/chai": "^4.3.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "^17.0.14",
        "@types/react": "^17.0.39",
        "@types/react-dom": "^17.0.11",
        "@typescript-eslint/eslint-plugin": "^5.20.0",
        "@typescript-eslint/parser": "^5.20.0",
        "auto-changelog": "^2.3.0",
        "axios": "^0.27.2",
        "axios-mock-adapter": "^1.20.0",
        "babel-eslint": "^10.1.0",
        "bignumber.js": "^9.0.2",
        "chai": "^4.3.6",
        "eslint": "^8.13.0",
        "eslint-config-impact-market": "2.0.3",
        "graphql": "^16.3.0",
        "mocha": "^10.0.0",
        "prettier": "^2.6.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "ts-node": "^10.5.0",
        "typedoc": "^0.23.7",
        "typescript": "4.4.2"
    },
    "peerDependencies": {
        "@apollo/client": "^3.5.10",
        "@celo/contractkit": "2.0.0",
        "@celo/react-celo": "4.0.1",
        "@ethersproject/abi": "5.6.4",
        "@ethersproject/abstract-signer": "5.6.2",
        "@ethersproject/contracts": "5.6.2",
        "@ethersproject/providers": "5.6.8",
        "axios": "^0.27.2",
        "bignumber.js": "^9.0.1",
        "graphql": "^16.3.0",
        "react": "^17.0.2"
    },
    "resolutions": {
        "@celo/contractkit": "2.0.0",
        "@celo/react-celo": "4.0.1"
    },
    "dependencies": {
        "@celo/connect": "2.0.0",
        "ethers": "5.6.9"
    }
}
