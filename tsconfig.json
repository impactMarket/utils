{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "removeComments": false,
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "outDir": "./",
    "lib": [
      "es2017",
      "esnext.asynciterable",
      "dom"
    ],
    "jsx": "react",
    "allowJs": true,
    "strict": true,
  },
  "include": [
    "src/*.ts",
    "src/*.tsx",
  ],
  "exclude": [
    "tests/**/*",
    "node_modules/**/*",
    "dist",
    "example"
  ]
}
